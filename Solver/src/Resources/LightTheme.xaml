<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- General Colors -->
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="TextForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="ControlBackgroundColor" Color="White"/>
    <SolidColorBrush x:Key="BorderColorBrush" Color="#ABADB3"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="AccentButtonBackgroundColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="AccentButtonForegroundColor" Color="White"/>

    <!-- Specific Action Button Colors -->
    <SolidColorBrush x:Key="IncludeButtonBackgroundColor" Color="DarkGreen"/>
    <SolidColorBrush x:Key="IncludeButtonForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="ExcludeButtonBackgroundColor" Color="DarkRed"/>
    <SolidColorBrush x:Key="ExcludeButtonForegroundColor" Color="White"/>

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundColor" Color="White"/>
    <SolidColorBrush x:Key="TextBoxForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="TextBoxDisabledBackgroundColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextBoxBorderColor" Color="#ABADB3"/> <!-- Added for consistency -->

    <!-- ListBox Colors -->
    <SolidColorBrush x:Key="ListItemHoverBackgroundColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ListItemSelectionBackgroundColor" Color="#007ACC"/>
    <SolidColorBrush x:Key="ListItemSelectionForegroundColor" Color="White"/>

    <!-- StatusBar Colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="StatusBarForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="StatusBarErrorForegroundColor" Color="Red"/>

</ResourceDictionary>